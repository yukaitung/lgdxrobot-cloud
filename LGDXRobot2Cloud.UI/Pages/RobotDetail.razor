@page "/robots/robots/{RobotId}"
@using LGDXRobot2Cloud.UI.Components.RobotDetail
@using LGDXRobot2Cloud.UI.Components.Robots
@using LGDXRobot2Cloud.Utilities.Enums
@rendermode InteractiveServer

<PageHeader Title="Robots">
  <div class="row align-items-center">
    <div class="col">
      <div class="mb-1">
        <ol class="breadcrumb" aria-label="breadcrumbs">
          <li class="breadcrumb-item"><a href="/robots/robots">â—€ All Robots</a></li>
        </ol>
      </div>
      @if (Robot != null)
      {
        <h2 class="page-title">
          @Robot.Name
          &nbsp;
          <RobotStatusBadge RobotStatus="@Robot.RobotStatus" />
        </h2>
      }
      else
      {
        <div class="placeholder-glow">
          <div class="placeholder col-2 placeholder-lg"></div>
          <div class="text-secondary">
            <div class="placeholder col-1"></div>
          </div>
        </div>
      }
    </div>
    @if (Robot != null && Robot.RobotStatus != RobotStatus.Offline)
    {
      <div class="col-md-auto ms-auto d-print-none">
        <div class="btn-list">
          <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#pauseTaskAssigement">
            @(Robot.IsPauseTaskAssigement ? "Resume Task Assignment" : "Pause Task Assignment")
          </a>
          <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#softwareEmergencyStop">
            @(Robot.IsSoftwareEmergencyStop ? "Resume This Robot" : "Stop This Robot")
          </a>
        </div>
      </div>
    }
  </div>
</PageHeader>

<PageBody>
  <div class="row row-cards">
    <div class="col-8">
      <TasksTable TasksList="Robot?.AssignedTasks" />
    </div>
    <div class="col-4">
      <RobotDataTable />
    </div>
     <div class="col-12">
      <RobotSetting Robot="Robot" OnUpdated="Refresh" />
    </div>
  </div>
</PageBody>

<PauseTaskAssigement Robot="Robot" />
<SoftwareEmergencyStop Robot="Robot" />