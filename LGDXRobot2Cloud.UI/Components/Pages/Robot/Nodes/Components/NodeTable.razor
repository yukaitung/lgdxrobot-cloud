@inherits AbstractTable
@using LGDXRobot2Cloud.UI.Components.Shared.Components.Table;


<div class="card">
  <!-- Header -->
  <div class="card-header">
    <h3 class="card-title">Nodes</h3>
  </div>
  <!-- Filter -->
  <div class="card-body border-bottom py-3">
    <div class="d-flex">
      <div class="text-secondary">
        <div class="row g-2">
          <div class="col">
            Show
          </div>
          <div class="col-auto">
            <TablePageSizeSelect OnChange="HandlePageSizeChange" />
          </div>
          <div class="col-auto">
            entries
          </div>
        </div>
      </div>
      <div class="ms-auto text-secondary">
        Search:
      </div>
      <div class="text-secondary">
        <div class="input-group">
          <input type="text" class="form-control form-control-sm ms-2" @bind="DataSearch">
          <button type="button" class="btn btn-sm" @onclick="HandleSearch">Search</button>
          <button type="button" class="btn btn-sm" @onclick="HandleClearSearch">Clear</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Data -->
  <div class="table-responsive">
    <table class="table card-table table-vcenter text-nowrap datatable">
      <thead>
        <tr>
          <th class="w-1">ID</th>
          <th>Name</th>
          <th>Process Name</th>
          <th class="w-100">Arguments</th>
          <th>Create Time</th>
          <th>Last Update Time</th>
          <th class="w-1"><!-- Action --></th>
        </tr>
      </thead>
      <tbody>
        @if (Nodes != null)
        {
          @foreach (var node in Nodes)
          {
            var nodeId = node.Id;
            <tr>
              <td>@node.Id</td>
              <td>@node.Name</td>
              <td>@node.ProcessName</td>
              <td>@node.Arguments</td>
              <td>@node.CreatedAt</td>
              <td>@node.UpdatedAt</td>
              <td class="text-end">
                <a href="@(AppRoutes.Robot.Nodes.Index + $"/{nodeId}")" class="page-link link-primary">Edit</a>
              </td>
            </tr>
          }
        }
        else
        {
          <TableLoading Columns="7" />
        }
      </tbody>
    </table>
    @if (Nodes != null && Nodes.Count() == 0)
    {
      <TableEmpty />
    }
  </div>
  <!-- Footer -->
  @if (PaginationHelper != null && Nodes != null && Nodes.Count() > 0)
  {
    <TablePagination PaginationHelper="PaginationHelper" ItemCount="Nodes.Count()"
      OnPageChange="HandlePageChange" />
  }
</div>
