@attribute [Route(AppRoutes.Robot.Robots.Index)]
@using LGDXRobot2Cloud.Utilities.Enums
@using LGDXRobot2Cloud.UI.Components.Pages.Robot.Robots.Components
@rendermode InteractiveServer

<PageHeader Title="Robots">
  <div class="row align-items-center">
    <div class="col">
      <h2 class="page-title">
        Robots
      </h2>
    </div>
    <div class="col-auto ms-auto">
      <div class="d-flex">
        <div class="input-group me-3">
          <input type="text" class="form-control form-control-sm" @bind="DataSearch" placeholder="Search Robot...">
          <button type="button" class="btn btn-sm" @onclick="HandleSearch">Search</button>
          <button type="button" class="btn btn-sm" @onclick="HandleClearSearch">Clear</button>
        </div>
        <a href="@AppRoutes.Robot.Robots.Create" type="button" class="btn btn-primary">
          Create Robot
        </a>
      </div>
    </div>
  </div>
</PageHeader>

<PageBody>
  @if (RobotsList != null)
  {
    <div class="row row-deck row-cards">
      @foreach (var robot in RobotsList)
      {
        var id = robot.Id;
        <div class="col-sm-6 col-md-4">
          <div class="card">
            <RobotCardTop RobotStatus="@robot.RobotStatus" />
            <div class="card-body row">
              <div class="d-flex">
                <h2 style="display: table;">@robot.Name</h2>
                <h2 class="ms-auto"><RobotStatusBadge RobotStatus="@robot.RobotStatus" /></h2>
              </div>
              <div class="mt-auto">
                <div>Address: @(robot.Address ?? "-")</div>
                <div>Namespace: @(robot.Namespace ?? "-")</div>
                <div>Batteries:
                @if (robot.Batteries.Count() > 0)
                {
                  @for (int i = 0; i < robot.Batteries.Count(); i++)
                  {
                    @(' ')
                    <span class="badge badge-outline text-green" title="@($"Battery {i + 1}")">
                      @(robot.Batteries.ElementAt(i) + " V")
                    </span>
                  }
                }
                else
                {
                  <span class="badge badge-outline">Unavailable</span>
                }
                </div>
              </div>
            </div>
            <div class="d-flex">
              <a href="@(AppRoutes.Robot.Robots.Detail + $"/{id}")" class="card-btn">
                Manage
              </a>
              @if (robot.RobotStatus != RobotStatus.Offline)
              {
                <a class="card-btn dropdown-toggle" data-bs-toggle="dropdown" style="cursor: pointer;" @onclick="(e) => HandleRobotSelect(robot)">
                  Quick Action
                </a>
                <div class="dropdown-menu">
                  <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#pauseTaskAssigement">@(robot.IsPauseTaskAssigement ? "Resume Task Assignment" : "Pause Task Assignment")</a>
                  <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#softwareEmergencyStop">@(robot.IsSoftwareEmergencyStop ? "Resume This Robot" : "Stop This Robot")</a>
                </div>
              }      
            </div>
          </div>
        </div>
      }
    </div>
  }
  else
  {
    <div class="row row-deck row-cards">
      @for (int i = 0; i < 16; i++)
      {
        <div class="col-sm-6 col-md-4">
          <div class="card">
            <div class="card-body placeholder-glow">
              <div class="placeholder col-12 placeholder-lg mb-3"></div>
              <div>
                <div class="placeholder col-9"></div>
                <div class="placeholder col-9"></div>
              </div>
            </div>
          </div>
        </div>
      }
    </div>
  }
  @if (RobotsList != null && RobotsList.Count() == 0)
  {
    <TableEmpty />
  }

  <div class="mt-3">
    @if (PaginationHelper != null && RobotsList != null && RobotsList.Count() > 0)
    {
      <TablePagination PaginationHelper="PaginationHelper" ItemCount="RobotsList.Count()"
        OnPageChange="HandlePageChange" />
    }
  </div>
</PageBody>

<PauseTaskAssigementModel Robot="SelectedRobot" />
<SoftwareEmergencyStopModel Robot="SelectedRobot" />