<div class="card">
  <div class="card-header">
    <h3 class="card-title">Certificate Detail</h3>
  </div>
  <div class="table-responsive">
    <table class="table card-table table-vcenter text-nowrap datatable">
      <tbody>
        <tr>
          <td>Thumbprint</td>
          <td>@(Robot != null ? Robot.CertificateThumbprint : "-")</td>
        </tr>
        <tr>
          <td>Valid Start</td>
          <td>@(Robot != null ? Robot.CertificateNotBefore : "-")</td>
        </tr>
        <tr>
          <td>Valid Till</td>
          <td>@(Robot != null ? Robot.CertificateNotAfter : "-")</td>
        </tr>
        <tr>
          <td>Backup Thumbprint</td>
          <td>@(Robot?.CertificateThumbprintBackup != null ? Robot.CertificateThumbprintBackup : "-")</td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="card-footer d-flex">
    <a class="btn btn-primary ms-auto">Review Certificate</a>
  </div>
</div>

@code
{
  [Parameter]
  public Models.Robot? Robot { get; set; }
}