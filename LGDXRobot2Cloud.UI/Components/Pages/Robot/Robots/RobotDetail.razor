@attribute [Route(AppRoutes.Robot.Robots.Detail)]
@attribute [Authorize (Policy = "ValidateLgdxUserAccess/Robot/Robots/Read")]
@using LGDXRobot2Cloud.Utilities.Enums
@using LGDXRobot2Cloud.UI.Components.Pages.Robot.Robots.Components
@rendermode InteractiveServer

<PageHeader Title="Robots">
  <div class="row align-items-center">
    <div class="col">
      <div class="mb-1">
        <ol class="breadcrumb" aria-label="breadcrumbs">
          <li class="breadcrumb-item"><a href="@AppRoutes.Robot.Robots.Index">â—€ Return</a></li>
        </ol>
      </div>
      @if (Robot != null)
      {
        <h2 class="page-title">
          @Robot.Name
          &nbsp;
          <RobotStatusBadge RobotStatus="@(RobotData != null ? RobotData.RobotStatus : RobotStatus.Offline)" />
        </h2>
      }
      else
      {
        <div class="placeholder-glow">
          <div class="placeholder col-2 placeholder-lg"></div>
          <div class="text-secondary">
            <div class="placeholder col-1"></div>
          </div>
        </div>
      }
    </div>
    <AuthorizeView Policy="ValidateLgdxUserAccess/Robot/Robots/Write" Context="Control">
      @if (RobotData != null && RobotCommands != null && RobotData.RobotStatus != RobotStatus.Offline)
      {
        <div class="col-md-auto ms-auto d-print-none">
          <div class="btn-list">
            <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#pauseTaskAssigement">
              @(RobotCommands.Commands.PauseTaskAssigement ? "Resume Task Assignment" : "Pause Task Assignment")
            </a>
            <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#softwareEmergencyStop">
              @(RobotCommands.Commands.SoftwareEmergencyStop ? "Resume This Robot" : "Stop This Robot")
            </a>
          </div>
        </div>
      }
    </AuthorizeView>
  </div>
</PageHeader>

<PageBody>
  <div class="row row-cards">
    <div class="col-12">
      <DetailTasksCard TasksList="Robot?.AssignedTasks" />
    </div>
    <div class="col-12">
      <DetailRobotDataCard RobotData="RobotData" />
    </div>
    <div class="col-12">
      <ul class="nav nav-bordered mb-4">
        @for (int i = 0; i < Tabs.Count; i++)
        {
          var index = i;
          <li class="nav-item">
            @if (@CurrentTab == i) 
            {
              <button class="nav-link active">@Tabs[i]</button>
            }
            else 
            {
              <button class="nav-link" @onclick="@(e => HandleTabChange(index))">@Tabs[i]</button>
            }
          </li>
        }
      </ul>
      @if (CurrentTab == 0)
      {
        <DetailRobotInfoCard Robot="Robot" />
      }
      else if (CurrentTab == 1)
      {
        <DetailSystemInfoCard RobotSystemInfo="Robot?.RobotSystemInfo" />
      }
      else if (CurrentTab == 2)
      {
        <DetailChassisInfoCard  Robot="Robot" RobotChassisInfo="Robot?.RobotChassisInfo" />
      }
      else if (CurrentTab == 3)
      {
        <DetailRobotCertificateCard RobotCertificate="Robot?.Certificate" />
      }
      else if (CurrentTab == 4)
      {
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Delete Robot</h3>
          </div>
          <div class="card-body">
            <AuthorizeView Policy="ValidateLgdxUserAccess/Robot/Robots/Delete" Context="Delete">
              <button type="button" class="btn btn-danger d-none d-sm-inline-block ms-auto" data-bs-toggle="modal"
                data-bs-target="#deleteModal">
                Delete Robot
              </button>
            </AuthorizeView>
          </div>
          <AuthorizeView Policy="ValidateLgdxUserAccess/Robot/Robots/Delete" Context="DeleteModel">
            <DeleteEntryModal EntryName="Robot" OnDelete="HandleDelete" />
          </AuthorizeView>
        </div>
      }
    </div>
  </div>
</PageBody>

<AuthorizeView Policy="ValidateLgdxUserAccess/Robot/Robots/Write" Context="ControlModel">
  <PauseTaskAssigementModel RobotCommands="RobotCommands" />
  <SoftwareEmergencyStopModel RobotCommands="RobotCommands" />
</AuthorizeView>
