@inherits AbstractTable

<div class="card">
  <!-- Header -->
  <div class="card-header">
    <h3 class="card-title">Roles</h3>
  </div>
  <!-- Filter -->
  <div class="card-body border-bottom py-3">
    <div class="d-flex">
      <div class="text-secondary">
        <div class="row g-2">
          <div class="col">
            Show
          </div>
          <div class="col-auto">
            <TablePageSizeSelect OnChange="HandlePageSizeChange" />
          </div>
          <div class="col-auto">
            entries
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Data -->
  <div class="table-responsive">
    <table class="table card-table table-vcenter text-nowrap datatable">
      <thead>
        <tr>
          <th class="w-1">ID</th>
          <th>Role Name</th>
          <th>Description</th>
          <th class="w-1"><!-- Action --></th>
        </tr>
      </thead>
      <tbody>
        @if (LgdxRoles != null)
        {
          @foreach (var lgdxRole in LgdxRoles)
          {
            var lgdxRoleId = lgdxRole.Id;
            <tr>
              <td>@lgdxRole.Id</td>
              <td>@lgdxRole.Name</td>
              <td>@lgdxRole.Description</td>
              <td class="text-end">
                <a href="@(AppRoutes.Administration.Roles.Index + $"/{lgdxRoleId}")" class="page-link link-primary">Edit</a>
              </td>
            </tr>
          }
        }
        else
        {
          <TableLoading Columns="5" />
        }
      </tbody>
    </table>
    @if (LgdxRoles != null && LgdxRoles.Count() == 0)
    {
      <TableEmpty />
    }
  </div>
  <!-- Footer -->
  @if (PaginationHelper != null && LgdxRoles != null && LgdxRoles.Count() > 0)
  {
    <TablePagination PaginationHelper="PaginationHelper" ItemCount="LgdxRoles.Count()"
      OnPageChange="HandlePageChange" />
  }
</div>
