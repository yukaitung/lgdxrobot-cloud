@inherits AbstractTable

<div class="card">
  <!-- Header -->
  <div class="card-header">
    <h3 class="card-title">@Title</h3>
  </div>
  <!-- Filter -->
  <div class="card-body border-bottom py-3">
    <div class="d-flex">
      <div class="text-secondary">
        <div class="row g-2">
          <div class="col">
            Show
          </div>
          <div class="col-auto">
            <TablePageSizeSelect OnChange="HandlePageSizeChange" />
          </div>
          <div class="col-auto">
            entries
          </div>
        </div>
      </div>
      <div class="ms-auto text-secondary">
        Search:
      </div>
      <div class="text-secondary">
        <div class="input-group">
          <input type="text" class="form-control form-control-sm ms-2" @bind="DataSearch">
          <button type="button" class="btn btn-sm" @onclick="HandleSearch">Search</button>
          <button type="button" class="btn btn-sm" @onclick="HandleClearSearch">Clear</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Data -->
  <div class="table-responsive">
    <table class="table card-table table-vcenter text-nowrap datatable">
      <thead>
        <tr>
          <th class="w-1">ID</th>
          <th>Name</th>
          <th>Priority</th>
          <th>Assigned Robot</th>
          <th>Current Progress</th>
          <th>Flow</th>
          <th class="w-1">Create Time</th>
          <th class="w-1">Last Update Time</th>
          <th class="w-1"><!-- Action --></th>
          <th class="w-1"><!-- Action --></th>
        </tr>
      </thead>
      <tbody>
        @if (TasksList != null)
        {
          @foreach (var task in TasksList)
          {
            var taskId = task.Id;
            <tr>
              <td>@task.Id</td>
              <td>@(string.IsNullOrWhiteSpace(task.Name) ? "-" : task.Name)</td>
              <td>@task.Priority</td>
              <td>@(string.IsNullOrWhiteSpace(task.AssignedRobot?.Name) ? "-" : task.AssignedRobot.Name)</td>
              <td>@task.CurrentProgress.Name</td>
              <td>@task.Flow.Name</td>
              <td>@task.CreatedAt</td>
              <td>@task.UpdatedAt</td>
              <td>
                <a href="@(AppRoutes.Navigation.Tasks.Index + $"/{taskId}?clone=true")" class="page-link link-primary">Clone</a>
              </td>
              <td class="text-end">
                <a href="@(AppRoutes.Navigation.Tasks.Index + $"/{taskId}")" class="page-link link-primary">@(IsEditable() ? "Edit" : "View")</a>
              </td>
            </tr>
          }
        }
        else
        {
          <TableLoading Columns="10" />
        }
      </tbody>
    </table>
    @if (TasksList != null && TasksList.Count() == 0)
    {
      <TableEmpty />
    }
  </div>
  <!-- Footer -->
  @if (PaginationHelper != null && TasksList != null && TasksList.Count() > 0)
  {
    <TablePagination PaginationHelper="PaginationHelper" ItemCount="TasksList.Count()"
      OnPageChange="HandlePageChange" />
  }
</div>
