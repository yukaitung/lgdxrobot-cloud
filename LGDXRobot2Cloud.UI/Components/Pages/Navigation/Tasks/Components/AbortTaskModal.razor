<div class="modal fade modal-blur" id="abortModal" tabindex="-1" data-bs-keyboard="false">
  <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
    <div class="modal-content">
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      <div class="modal-status bg-danger"></div>
      <div class="modal-body text-center py-4 d-flex flex-column">
        <i class="ti ti-alert-square text-danger mb-2" style="font-size: 48px;"></i>
        <h3>Abort Task</h3>
        <div class="text-secondary">Do you want to abort this task? This action cannot be undone.</div>
      </div>
      <div class="modal-footer">
        <div class="w-100">
          <div class="row">
            <div class="col">
              <a class="btn w-100" data-bs-dismiss="modal">
                Cancel
              </a>
            </div>
            <div class="col">
              <button type="button" class="btn btn-danger w-100" onclick="@(() => OnAbort.InvokeAsync())" data-bs-dismiss="modal">
                Abort
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@code {
  [Parameter]
  public required EventCallback OnAbort { get; set; }
}