@inherits AbstractTable

<div class="card">
  <!-- Header -->
  <div class="card-header">
    <h3 class="card-title">Progresses</h3>
  </div>
  <!-- Filter -->
  <div class="card-body border-bottom py-3">
    <div class="d-flex">
      <div class="text-secondary">
        <div class="row g-2">
          <div class="col">
            Show
          </div>
          <div class="col-auto">
            <TablePageSizeSelect OnChange="HandlePageSizeChange" />
          </div>
          <div class="col-auto">
            entries
          </div>
        </div>
      </div>
      <div class="ms-auto text-secondary">
        Search:
      </div>
      <div class="text-secondary">
        <div class="input-group">
          <input type="text" class="form-control form-control-sm ms-2" @bind="DataSearch">
          <button type="button" class="btn btn-sm" @onclick="HandleSearch">Search</button>
          <button type="button" class="btn btn-sm" @onclick="HandleClearSearch">Clear</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Data -->
  <div class="table-responsive">
    <table class="table card-table table-vcenter text-nowrap datatable">
      <thead>
        <tr>
          <th class="w-1">ID</th>
          <th>Name</th>
          <th>System</th>
          <th>Reserved</th>
          <th class="w-1">Create Time</th>
          <th class="w-1">Last Update Time</th>
          <th class="w-1"><!-- Action --></th>
        </tr>
      </thead>
      <tbody>
        @if (ProgressesList != null)
        {
          @foreach (var progress in ProgressesList)
          {
            var progressId = progress.Id;
            <tr>
              <td>@progress.Id</td>
              <td>@progress.Name</td>
              <td>@(progress.System ? "Yes" : "No")</td>
              <td>@(progress.Reserved ? "Yes" : "No")</td>
              <td>@progress.CreatedAt</td>
              <td>@progress.UpdatedAt</td>
              <td class="text-end">
              @if (!progress.System)
              {
                <a href="@(AppRoutes.Navigation.Progresses.Index + $"/{progressId}")" class="page-link link-primary">Edit</a>
              }
              </td>
            </tr>
          }
        }
        else
        {
          <TableLoading Columns="7" />
        }
      </tbody>
    </table>
    @if (ProgressesList != null && ProgressesList.Count() == 0)
    {
      <TableEmpty />
    }
  </div>
  <!-- Footer -->
  @if (PaginationHelper != null && ProgressesList != null && ProgressesList.Count() > 0)
  {
    <TablePagination PaginationHelper="PaginationHelper" ItemCount="ProgressesList.Count()"
      OnPageChange="HandlePageChange" />
  }
</div>
