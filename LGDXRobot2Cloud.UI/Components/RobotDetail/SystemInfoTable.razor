<div class="card h-100">
  <!-- Header -->
  <div class="card-header">
    <h3 class="card-title">System Information</h3>
  </div>

  <!-- Data -->
  <div class="table-responsive">
    <table class="table card-table table-vcenter text-nowrap datatable">
      <tbody>
        <tr><td>CPU Model</td><td>@(RobotSystemInfo == null ? "-" : RobotSystemInfo.Cpu)</td></tr>
        <tr><td>Endianness</td><td>@(RobotSystemInfo == null ? "-" : RobotSystemInfo.IsLittleEndian ? "Little-endian" : "Big-endian")</td></tr>
        <tr><td>RAM Size</td><td>@(RobotSystemInfo == null ? "-" : RobotSystemInfo.RamMiB) (MiB)</td></tr>
        <tr><td>GPU Model</td><td>@(RobotSystemInfo == null && RobotSystemInfo?.Gpu == null ? "-" : RobotSystemInfo?.Gpu)</td></tr>
        <tr><td>Operation System</td><td>@(RobotSystemInfo == null ? "-" : RobotSystemInfo.Os)</td></tr>
        <tr><td>System Type</td><td>@(RobotSystemInfo == null ? "-" : RobotSystemInfo.Is32Bit ? "32 Bit" : "64 Bit")</td></tr>
      </tbody>
    </table>
  </div>
</div>