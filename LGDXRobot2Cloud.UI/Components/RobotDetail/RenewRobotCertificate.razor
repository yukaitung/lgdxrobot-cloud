@using LGDXRobot2Cloud.UI.Shared.Icons
@using LGDXRobot2Cloud.UI.Components.Robots

<div class="modal modal-blur fade" id="renewCertificateModal" data-bs-backdrop="static" data-bs-keyboard="false"
  tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Renew Robot Certificate</h5>
        @if (currentStep == 0)
        {
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        }
      </div>
      <form @onsubmit="HandleSubmit">
        <div class="modal-body">
          <div class="mb-3 row">
            <ul class="steps steps-counter">
              @for (int i = 0; i < stepHeadings.Count(); i++)
              {
                <li class="step-item @(currentStep == i ? "active" : "")">@stepHeadings[i]</li>
              }
            </ul>
          </div>
          <ModalSubmitError Display="IsError" Crud="@CrudOperation.Update" />
          @if (currentStep == 0)
          {
            
          }
          else if (currentStep == 1)
          {
            <RobotCertificateKey RobotCertificates="RobotCertificates" />
          }
          else if (currentStep == 2)
          {
            <div class="modal-body text-center py-4">
              <CircleCheck />
              <h3>Certificate Renewed</h3>
              <div class="text-secondary">Please upload the key to the robot and test the connection.</div>
            </div>
          }
        </div>
        <div class="modal-footer">
          @if (currentStep == 0)
          {
            <a class="btn btn-link link-secondary" data-bs-dismiss="modal">
              Cancel
            </a>
          }
          @if (currentStep < stepHeadings.Count() - 1)
          {
            <button type="submit" class="btn btn-primary ms-auto">
              Next
            </button>
          }
          else
          {
            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">
              Done
            </button>
          }
        </div>
      </form>
    </div>
  </div>
</div>