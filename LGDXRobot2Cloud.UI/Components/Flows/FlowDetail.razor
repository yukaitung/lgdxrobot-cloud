@using LGDXRobot2Cloud.UI.Shared.Icons
@inherits AbstractForm

<div class="modal modal-blur fade" id="flowDetailModal" data-bs-backdrop="static" data-bs-keyboard="false"
  tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">@(Id != null ? "Update Flow" : "Create New Flow")</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <EditForm EditContext="_editContext" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit">
        <DataAnnotationsValidator />
        <div class="modal-body">
          <ModalValidationError Display="IsInvalid" />
          <ModalSubmitError Display="IsError" Crud="@(Id != null ? CrudOperation.Update : CrudOperation.Create)" />
          @if (Id != null)
          {
            <div class="mb-3 row">
              <label class="col-3 col-form-label">ID</label>
              <div class="col">
                <div class="col form-control-plaintext">@Flow.Id</div>
              </div>
            </div>
          }
          <div class="row">
            <label class="col-3 col-form-label required" for="Name">Name</label>
            <div class="col">
              <InputText id="Name" @bind-Value="Flow.Name" type="text" class="form-control"
                placeholder="Your flow name" />
              <ValidationMessage class="invalid-feedback" For="@(() => Flow.Name)" />
            </div>
          </div>
        </div>
        <div class="modal-body">
          <label class="form-label required">Flow Detail</label>
          <InformationAlert>
            1. The "Moving" progress must be included in the flow.<br />
            2. An external API call is required for using "API" as proceed condition.
          </InformationAlert>
          @for (int i = 0; i < Flow.FlowDetails.Count(); i++)
          {
            var index = i;
            var flowDetail = Flow.FlowDetails[i];
            <fieldset class="form-fieldset">
              <div class="d-flex flex-row gap-2">
                <div class="flex-grow-1">
                  @if (flowDetail.Id != null)
                  {
                    <div class="mb-2 row">
                      <label class="col-3 col-form-label col-form-label-sm">ID</label>
                      <div class="col">
                        <div class="col col-form-label col-form-label-sm">@flowDetail.Id</div>
                      </div>
                    </div>
                  }
                  <div class="mb-2 row">
                    <label class="col-3 col-form-label col-form-label-sm required" for="Name">Progress Name</label>
                    <div class="col">
                      <InputSelect id="@(AdvanceSelectElements[0] + i.ToString())" class="form-control form-control-sm" @bind-Value="flowDetail.ProgressId">
                        @if (flowDetail.ProgressName != null)
                        {
                          <option value="@flowDetail.ProgressId">@flowDetail.ProgressName</option>
                        }
                      </InputSelect>
                    </div>
                  </div>
                  <div class="mb-2 row">
                    <label class="col-3 col-form-label col-form-label-sm required" for="Name">Proceed Condition</label>
                    <div class="col">
                      <select class="form-select form-select-sm" value="@flowDetail.ProceedCondition" @onchange="@((e) => HandleProceedConditionChange(index, e.Value ?? null))">
                        <option value="robot">Robot</option>
                        <option value="api">API</option>
                      </select>
                    </div>
                  </div>
                  <div class="mb-2 row">
                    <label class="col-3 col-form-label col-form-label-sm" for="Name">Begin Trigger</label>
                    <div class="col">
                      <InputSelect id="@(AdvanceSelectElements[1] + i.ToString())" class="form-control form-control-sm" @bind-Value="flowDetail.StartTriggerId">
                        @if (flowDetail.StartTriggerName != null)
                        {
                          <option value="@flowDetail.StartTriggerId">@flowDetail.StartTriggerName</option>
                        }
                      </InputSelect>
                    </div>
                  </div>
                  <div class="row">
                    <label class="col-3 col-form-label col-form-label-sm" for="Name">Complete Trigger</label>
                    <div class="col">
                      <InputSelect id="@(AdvanceSelectElements[2] + i.ToString())" class="form-control form-control-sm" @bind-Value="flowDetail.EndTriggerId">
                        @if (flowDetail.EndTriggerName != null)
                        {
                          <option value="@flowDetail.EndTriggerId">@flowDetail.EndTriggerName</option>
                        }
                      </InputSelect>
                    </div>
                  </div>
                </div>
                <div class="d-flex flex-column justify-content-between">
                  <div class="">
                    <button type="button" class="btn btn-ghost-secondary btn-icon @(i < 1 ? "disabled" : "")" @onclick="e => FlowStepMoveUp(index)">
                      <ArrowUpIcon />
                    </button>
                  </div>
                  <div class="">
                    <button type="button" class="btn btn-ghost-danger btn-icon @(Flow.FlowDetails.Count() <= 1 ? "disabled" : "")" @onclick="e => FlowRemoveStep(index)">
                      <TrashIcon />
                    </button>
                  </div>
                  <div class="">
                    <button type="button" class="btn btn-ghost-secondary btn-icon @(i >= Flow.FlowDetails.Count() - 1 ? "disabled" : "")"  @onclick="e => FlowStepMoveDown(index)">
                      <ArrowDownIcon />
                    </button>
                  </div>
                </div>
              </div>
            </fieldset>
          }
          <div class="row">
            <button type="button" class="btn btn-secondary w-8 mx-auto" @onclick="FlowAddStep">
              Add A Step
            </button>
          </div>
        </div>
        @if (Id != null)
        {
          <div class="modal-body">
            <div class="mb-3 row">
              <label class="col-3 col-form-label">Create Time</label>
              <div class="col">
                <div class="col form-control-plaintext">@Flow.CreatedAt</div>
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label">Last Update Time</label>
              <div class="col">
                <div class="col form-control-plaintext">@Flow.UpdatedAt</div>
              </div>
            </div>
          </div>
        }
        <div class="modal-footer">
          <a type="button" class="btn btn-link link-secondary" data-bs-dismiss="modal">
            Cancel
          </a>
          @if (Id != null)
          {
            <button type="button" class="btn btn-danger ms-auto" data-bs-toggle="modal" data-bs-target="#flowDeleteModal">
              Delete
            </button>
            <button type="submit" class="btn btn-primary ms-2">
            Update
          </button>
          }
          else
          {
            <button type="submit" class="btn btn-primary ms-auto">
              Create
            </button>
          }
        </div>
      </EditForm>
    </div>
  </div>
</div>

@if (Id != null)
{
  <div class="modal fade" id="flowDeleteModal" tabindex="-1" data-bs-keyboard="false">
  <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="modal-title">Delete Flow</div>
        <ModalSubmitError Display="IsError" Crud="@CrudOperation.Delete" />
        <div>The Node @(Flow.Name != null ? $"\"{Flow.Name}\" (ID: {Flow.Id})" : $"ID: {Flow.Id}") will be deleted.
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-link link-secondary me-auto" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" @onclick="HandleDelete">Yes</button>
      </div>
    </div>
  </div>
</div>
}