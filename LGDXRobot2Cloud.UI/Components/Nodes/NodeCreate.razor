<div class="modal modal-blur fade" id="nodeCreateModal" data-bs-backdrop="static" data-bs-keyboard="false"
  tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create Node</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <EditForm EditContext="_editContext" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit">
        <DataAnnotationsValidator />
        <div class="modal-body">
          <ModalValidationError Display="_isInvalid" />
          <ModalSubmissionError Display="_isError" />
          <div class="mb-3 row">
            <label class="col-3 col-form-label required" for="Name">Name</label>
            <div class="col">
              <InputText id="Name" @bind-Value="_node.Name" type="text" class="form-control"
                placeholder="Your node name" />
              <ValidationMessage class="invalid-feedback" For="@(() => _node.Name)" />
            </div>
          </div>
          <div class="mb-3 row">
            <label class="col-3 col-form-label required" for="ProcessName">Process Name</label>
            <div class="col">
              <InputText id="ProcessName" @bind-Value="_node.ProcessName" type="text" class="form-control"
                placeholder="e.g. ros2 launch" />
              <ValidationMessage class="invalid-feedback" For="@(() => _node.ProcessName)" />
            </div>
          </div>
          <div class="mb-3 row">
            <label class="col-3 col-form-label" for="Arguments">Arguments</label>
            <div class="col">
              <InputTextArea id="Arguments" @bind-Value="_node.Arguments" class="form-control" rows="3"
                placeholder="e.g. lgdxrobot2_navigation nav2_rtabmap.launch.py"></InputTextArea>
              <ValidationMessage class="invalid-feedback" For="@(() => _node.Arguments)" />
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <a class="btn btn-link link-secondary" data-bs-dismiss="modal">
            Cancel
          </a>
          <button type="submit" class="btn btn-primary ms-auto">
            Create Node
          </button>
        </div>
      </EditForm>
    </div>
  </div>
</div>
