@using LGDXRobot2Cloud.Utilities.Enums

<div class="modal fade" id="pauseTaskAssigement" tabindex="-1" data-bs-keyboard="false">
  <div class="modal-dialog modal-md modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        @if (Robot != null)
        {
          <div class="modal-title">
            @(Robot.IsPauseTaskAssigement ?
                "Resume Task Assigment" :
                "Pause Task Assigment")
          </div>
          <ModalSubmitError Display="IsError" />
          <div>
          @(Robot.IsPauseTaskAssigement ?
                $"The robot {Robot.Name} will start receiving task." :
                $"The robot {Robot.Name} will stop receiving task.")
          </div>
        }
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-link link-secondary me-auto" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" @onclick="HandleRequest">Yes</button>
      </div>
    </div>
  </div>
</div>
