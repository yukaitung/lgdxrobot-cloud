@using LGDXRobot2Cloud.Utilities.Enums

<div class="modal fade" id="softwareEmergencyStop" tabindex="-1" data-bs-keyboard="false">
  <div class="modal-dialog modal-md modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        @if (Robot != null)
        {
          <div class="modal-title">
            @(Robot.IsSoftwareEmergencyStop ?
                "Resume This Robot" :
                "Stop This Robot")
          </div>
          <ModalSubmitError Display="IsError" />
          <div>
          @(Robot.IsSoftwareEmergencyStop ?
                $"The robot {Robot.Name} will be resumed." :
                $"The robot {Robot.Name} will be stopped.")
          </div>
        }
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-link link-secondary me-auto" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" @onclick="HandleRequest">Yes</button>
      </div>
    </div>
  </div>
</div>
