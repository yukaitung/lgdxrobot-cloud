@using LGDXRobot2Cloud.UI.Shared.Icons
@using LGDXRobot2Cloud.Utilities.Enums
@inherits AbstractForm

<div class="modal modal-blur fade" id="taskDetailModal" data-bs-backdrop="static" data-bs-keyboard="false"
  tabindex="-1">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">@(Id != null ? (IsEditable() ? "Update Task" : "View Task") : "Create New Task")</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <EditForm EditContext="_editContext" OnValidSubmit="HandleValidSubmit" OnInvalidSubmit="HandleInvalidSubmit">
        <DataAnnotationsValidator />
        <div class="modal-body">
          <ModalValidationError Display="IsInvalid" />
          <ModalSubmitError Display="IsError" Crud="@(Id != null ? CrudOperation.Update : CrudOperation.Create)" />
          @if (Id != null)
          {
            <div class="mb-3 row">
              <label class="col-3 col-form-label">ID</label>
              <div class="col">
                <div class="col form-control-plaintext">@Task.Id</div>
              </div>
            </div>
          }
          <div class="mb-3 row">
            <label class="col-3 col-form-label" for="Name">Name</label>
            <div class="col">
              @if (IsEditable())
              {
                <InputText id="Name" @bind-Value="Task.Name" type="text" class="form-control"
                  placeholder="Your task name" />
                <ValidationMessage class="invalid-feedback" For="@(() => Task.Name)" />
              }
              else
              {
                <div class="col form-control-plaintext">@Task.Name</div>
              }
            </div>
          </div>
          <div class="mb-3 row">
            <label class="col-3 col-form-label required" for="Priority">Priority</label>
            <div class="col">
              @if (IsEditable())
              {
                <InputNumber id="Priority" @bind-Value="Task.Priority" class="form-control"
                  placeholder="Higher number with higher priority" />
                <ValidationMessage class="invalid-feedback" For="@(() => Task.Priority)" />
              }
              else
              {
                <div class="col form-control-plaintext">@Task.Priority</div>
              }
            </div>
          </div>
          <div class="mb-3 row">
            <label class="col-3 col-form-label required" for="FlowId">Flow</label>
            <div class="col">
              @if (IsEditable())
              {
                <InputSelect id="@(AdvanceSelectElements[0] + "0")" class="form-control" @bind-Value="Task.FlowId"
                  placeholder="Search the name of the flow">
                  @if (Task.FlowId != null)
                  {
                    <option value="@Task.FlowId">@Task.FlowName</option>
                  }
                </InputSelect>
                <ValidationMessage class="invalid-feedback" For="@(() => Task.FlowId)" />
              }
              else
              {
                <div class="col form-control-plaintext">@Task.FlowName</div>
              }
            </div>
          </div>
          <div class="mb-3 row">
            <label class="col-3 col-form-label" for="AssignedRobotId">Assign Robot</label>
            <div class="col">
              @if (IsEditable())
              {
                <InputSelect id="@(AdvanceSelectElements[1] + "0")" class="form-control" @bind-Value="Task.AssignedRobotId"
                  placeholder="Search the name of the robot">
                  @if (Task.AssignedRobotId != null)
                  {
                    <option value="@Task.AssignedRobotId">@Task.AssignedRobotName</option>
                  }
                </InputSelect>
                <ValidationMessage class="invalid-feedback" For="@(() => Task.AssignedRobotId)" />
              }
              else
              {
                <div class="col form-control-plaintext">@Task.AssignedRobotName</div>
              }
            </div>
          </div>
          @if (Id != null && !IsEditable())
          {
            <div class="mb-3 row">
              <label class="col-3 col-form-label">Current Progress</label>
              <div class="col">
                <div class="col form-control-plaintext">@Task.CurrentProgress.Name</div>
              </div>
            </div>
          }
          @if (Id == null)
          {
            <div class="mb-3 row">
              <label class="col-3 col-form-label pt-0"></label>
              <div class="col">
                <label class="form-check">
                  <input class="form-check-input" type="checkbox" @bind="Task.IsTemplate">
                  <span class="form-check-label">Create as Template Task</span>
                </label>
              </div>
            </div>
          }
        </div>
        <div class="modal-body">
          <div class="form-label">Waypoints</div>
          <div class="table">
            <table class="table table-sm card-table table-vcenter text-nowrap">
              <thead>
                <tr>
                  <th class="w-1">ID</th>
                  @if (IsEditable())
                  {
                    <th class="w-1"></th>
                  }
                  <th style="width:250px">Waypoint</th>
                  <th>X</th>
                  <th>Y</th>
                  <th>Rotation</th>
                  @if (IsEditable())
                  {
                    <th class="w-1"></th>
                  }
                </tr>
              </thead>
              <tbody>
                @for (int i = 0; i < Task.Details.Count; i++)
                {
                  var index = i;
                  var taskDetail = Task.Details[i];
                  <tr>
                    <td>
                      @if (taskDetail.Id != null)
                      {
                        <div class="col col-form-label col-form-label-sm">@taskDetail.Id</div>
                      }
                    </td>
                    @if (IsEditable())
                    {
                      <td>
                        <button type="button" class="btn btn-ghost-secondary btn-icon btn-sm @(i < 1 ? "disabled" : "")"
                          @onclick="e => TaskStepMoveUp(index)">
                          <ArrowUpIcon />
                        </button>
                        <button type="button"
                          class="btn btn-ghost-secondary btn-icon btn-sm @(i >= Task.Details.Count - 1 ? "disabled" : "")"
                          @onclick="e => TaskStepMoveDown(index)">
                          <ArrowDownIcon />
                        </button>
                      </td>
                    }
                    <td>
                      @if (IsEditable())
                      {
                        <InputSelect id="@(AdvanceSelectElements[2] + i.ToString())" class="form-control form-control-sm"
                          @bind-Value="taskDetail.WaypointId">
                          @if (taskDetail.WaypointName != null)
                          {
                            <option value="@taskDetail.WaypointId">@taskDetail.WaypointName</option>
                          }
                        </InputSelect>
                      }
                      else
                      {
                        <div class="col col-form-label col-form-label-sm">@taskDetail.WaypointName</div>
                      }
                    </td>
                    <td>
                      @if (IsEditable())
                      {
                        <input type="text" class="form-control form-control-sm" @bind="@Task.Details[index].CustomX">
                      }
                      else
                      {
                        <div class="col col-form-label col-form-label-sm">@Task.Details[index].CustomX</div>
                      }
                    </td>
                    <td>
                      @if (IsEditable())
                      {
                        <input type="text" class="form-control form-control-sm" @bind="@Task.Details[index].CustomY">
                      }
                      else
                      {
                        <div class="col col-form-label col-form-label-sm">@Task.Details[index].CustomY</div>
                      }
                    </td>
                    <td>
                      @if (IsEditable())
                      {
                        <input type="text" class="form-control form-control-sm" @bind="@Task.Details[index].CustomRotation">
                      }
                      else
                      {
                        <div class="col col-form-label col-form-label-sm">@Task.Details[index].CustomRotation</div>
                      }
                    </td>
                    @if (IsEditable())
                    {
                      <td>
                        <button type="button"
                          class="btn btn-ghost-danger btn-icon btn-sm @(Task.Details.Count <= 1 ? "disabled" : "")"
                          @onclick="e => TaskRemoveStep(index)">
                          <TrashIcon />
                        </button>
                      </td>
                    }
                  </tr>
                }
              </tbody>
            </table>
          </div>
          @if (IsEditable())
          {
            <div class="row">
              <button type="button" class="btn btn-secondary w-8 mx-auto" @onclick="TaskAddStep">
                Add A Step
              </button>
            </div>
          }
        </div>
        @if (Id != null)
        {
          <div class="modal-body">
            <div class="mb-3 row">
              <label class="col-3 col-form-label">Create Time</label>
              <div class="col">
                <div class="col form-control-plaintext">@Task.CreatedAt</div>
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label">Last Update Time</label>
              <div class="col">
                <div class="col form-control-plaintext">@Task.UpdatedAt</div>
              </div>
            </div>
          </div>
        }
        <div class="modal-footer">
          <a type="button" class="btn btn-link link-secondary me-auto" data-bs-dismiss="modal">
            Cancel
          </a>
          @if (IsEditable())
          {
            @if (Id != null)
            {
              <button type="button" class="btn btn-danger ms-auto" data-bs-toggle="modal" data-bs-target="#taskDeleteModal">
                Delete
              </button>
              <button type="submit" class="btn btn-primary ms-2">
                Update
              </button>
            }
            else
            {
              <button type="submit" class="btn btn-primary ms-auto">
                Create
              </button>
            }
          }
          else if (Task.CurrentProgress.Id != (int)ProgressState.Completed && Task.CurrentProgress.Id != (int)ProgressState.Aborted)
          {
            <button type="button" class="btn btn-danger ms-auto" data-bs-toggle="modal" data-bs-target="#taskAbortModal">
              Abort
            </button>
          }
        </div>
      </EditForm>
    </div>
  </div>
</div>

@if (Id != null)
{
  <div class="modal fade" id="taskDeleteModal" tabindex="-1" data-bs-keyboard="false">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <div class="modal-title">Delete Task</div>
          <ModalSubmitError Display="IsError" Crud="@CrudOperation.Delete" />
          <div>The Task @(Task.Name != null ? $"\"{Task.Name}\" (ID: {Task.Id})" : $"ID: {Task.Id}") will be deleted.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-link link-secondary me-auto" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" @onclick="HandleDelete">Yes</button>
        </div>
      </div>
    </div>
  </div>
}

@if (!IsEditable())
{
  <div class="modal fade" id="taskAbortModal" tabindex="-1" data-bs-keyboard="false">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <div class="modal-title">Abort Task</div>
          <ModalSubmitError Display="IsError" />
          <div>The Task @(Task.Name != null ? $"\"{Task.Name}\" (ID: {Task.Id})" : $"ID: {Task.Id}") will be aborted.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-link link-secondary me-auto" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" @onclick="HandleAbort">Yes</button>
        </div>
      </div>
    </div>
  </div>
}