@inherits AbstractTable

<div class="card">
  <!-- Header -->
  <div class="card-header">
    <h3 class="card-title">LGDXRobot2 API Keys</h3>
  </div>
  <!-- Filter -->
  <div class="card-body border-bottom py-3">
    <div class="d-flex">
      <div class="text-secondary">
        <div class="row g-2">
          <div class="col">
            Show
          </div>
          <div class="col-auto">
            <TablePageSizeSelect OnChange="HandlePageSizeChange" />
          </div>
          <div class="col-auto">
            entries
          </div>
        </div>
      </div>
      <div class="ms-auto text-secondary">
        Search:
      </div>
      <div class="text-secondary">
        <div class="input-group">
          <input type="text" class="form-control form-control-sm ms-2" @bind="_dataSearch">
          <button type="button" class="btn btn-sm" @onclick="HandleSearch">Search</button>
          <button type="button" class="btn btn-sm" @onclick="HandleClearSearch">Clear</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Data -->
  <div class="table-responsive">
    <table class="table card-table table-vcenter text-nowrap datatable">
      <thead>
        <tr>
          <th class="w-1">ID</th>
          <th>Name</th>
          <th>Secret</th>
          <th>Create Time</th>
          <th>Last Update Time</th>
          <th class="w-1"><!-- Action --></th>
        </tr>
      </thead>
      <tbody>
        @if (_apiKeyList != null)
        {
          @foreach (var apiKey in _apiKeyList)
          {
            var apiKeyId = apiKey.Id;
            <tr>
              <td>@apiKey.Id</td>
              <td>@apiKey.Name</td>
              <td>
                <button class="page-link link-primary" data-bs-toggle="modal" data-bs-target="#apiKeySecretModal"
                  @onclick="@(e => HandleItemSelect(apiKeyId))">View Secret</button>
              </td>
              <td>@apiKey.CreatedAt</td>
              <td>@apiKey.UpdatedAt</td>
              <td class="text-end">
                <button class="page-link link-primary" data-bs-toggle="modal" data-bs-target="#apiKeyDetailModal"
                  @onclick="@(e => HandleItemSelect(apiKeyId))">Edit</button>
              </td>
            </tr>
          }
        }
        else
        {
          <TableLoading Columns="7" />
        }
      </tbody>
    </table>
    @if (_apiKeyList != null && _apiKeyList.Count() == 0)
    {
      <TableEmpty />
    }
  </div>
  <!-- Footer -->
  @if (_paginationMetadata != null && _apiKeyList != null && _apiKeyList.Count() > 0)
  {
    <TablePagination PaginationMetadata="_paginationMetadata" ItemCount="_apiKeyList.Count()"
      OnPageChange="HandlePageChange" />
  }
</div>
