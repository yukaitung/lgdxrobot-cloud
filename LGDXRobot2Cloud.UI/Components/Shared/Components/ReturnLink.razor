<div class="mb-1">
  <ol class="breadcrumb" aria-label="breadcrumbs">
    <li class="breadcrumb-item"><button class="btn-link p-0 border-0" onclick="
      const prevUrl = window.location.pathname;
      window.history.back();
      setTimeout(() => {
        if (prevUrl === window.location.pathname)
        {
          window.location = @($"\"{Fallback}\"");
        }      
      }, 100);
    ">â—€ Return</button></li>
  </ol>
</div>

@code {
  [Parameter]
  public string Fallback { get; set; } = "/";
}