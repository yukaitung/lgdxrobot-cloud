@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="color-scheme" content="light">
    <meta name="supported-color-schemes" content="light">
    <style>  
      h1 {
        font-size: 1.7rem;
        line-height: 2rem;
        text-align: center !important;
      }
    
      h2 {
        font-size: 1.45rem;
        line-height: 1.75rem;
        text-align: center !important;
      }
    
      h1, h2 {
        margin-top: 0;
        margin-bottom: 1rem;
        font-weight: 600;
        line-height: 1.2;
        color: rgb(24, 36, 51);
      }
    
      p {
        margin-top: 0;
        margin-bottom: 1rem;
      }

      .email-container {
        padding-left: 1rem;
        padding-right: 1rem;
      }

      .email-body {
        padding: 2.5rem;
      }

      @@media only screen and (max-width: 500px) {
        body {
          font-size: 1.0rem;
        }

        h1 {
          font-size: 1.5rem;
        }
      
        h2 {
          font-size: 1.25rem;
        }

        .email-container {
          padding-right: 0;
          padding-left: 0;
        }

        .email-body {
          padding-left: 1rem;
          padding-right: 1rem;
        }
      }
    </style>
  </head>
  <body leftmargin="0" topmargin="0" marginwidth="0" marginheight="0" style="
    background-color: #F6F8FB;
  ">
    <div class="background" style="
        -moz-osx-font-smoothing: grayscale;
        -webkit-font-smoothing: antialiased;
        background-color: #F6F8FB;
        color: #182433;
        font-family: -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif;
        font-size: 1.2rem;
        font-weight: 400;
        line-height: 1.4285714286;
        margin: 0
        padding: 0
        text-rendering: optimizeLegibility;
      ">
      <div class="email-container" style="
        box-sizing: border-box; 
        margin-left: auto;
        margin-right: auto;
        max-width: 500px;
        padding-bottom: 2.5rem;
        padding-top: 2.5rem;
      ">
        <div class="email-card" style="
          background-clip: border-box;
          background-color: #ffffff;
          border-radius: 4px;
          border: 1px solid rgba(4, 32, 69, 0.1);
          color: #182433;
          word-wrap: break-word;
        ">
          <div class="email-body">
            <Logo />
            @Body
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
