<a class="btn" 
href="@HREF"
style="
  align-items: center;
  background-color: #066fd1;
  border-radius: 4px;
  border: 1px solid transparent;
  color: #f6f8fb;
  cursor: pointer;
  display: inline-flex;
  justify-content: center;
  padding: 0.625rem 1rem;
  text-align: center;
  user-select: none;
  vertical-align: middle;
  white-space: nowrap;
  text-decoration: none;
  margin-bottom: 1rem;
">
  @ChildContent
</a>

@code {
  [Parameter]
  public RenderFragment? ChildContent { get; set; }

  [Parameter]
  public string? HREF { get; set; }
}