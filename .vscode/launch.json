{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch LGDXRobotCloud.API (.NET 8)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build: LGDXRobotCloud.API",
      "program": "${workspaceFolder}/LGDXRobotCloud.API/bin/Debug/net8.0/LGDXRobotCloud.API.dll",
      "args": [],
      "cwd": "${workspaceFolder}/LGDXRobotCloud.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+https?://\\S+",
        "uriFormat": "https://localhost:5163/swagger"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Launch LGDXRobotCloud.UI (.NET 8)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build: LGDXRobotCloud.UI",
      "program": "${workspaceFolder}/LGDXRobotCloud.UI/bin/Debug/net8.0/LGDXRobotCloud.UI.dll",
      "args": [],
      "cwd": "${workspaceFolder}/LGDXRobotCloud.UI",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch All",
      "configurations": [
        "Launch LGDXRobotCloud.API (.NET 8)",
        "Launch LGDXRobotCloud.UI (.NET 8)"
      ],
      "stopAll": true,
    }
  ]
}