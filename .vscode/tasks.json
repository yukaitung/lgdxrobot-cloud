{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "test",
			"dependsOn": [],
			"command": "dotnet",
			"type": "process",
			"args": [
				"test",
				"--collect:\"XPlat Code Coverage\""
			],
			"problemMatcher": "$msCompile",
			"group": {
					"kind": "test",
					"isDefault": true
			}
		},
		{
      "label": "delay",
      "type": "shell",
      "command": "sleep 1",
      "problemMatcher": []
    },
		{
      "label": "build-delay",
      "dependsOn": ["build", "delay"],
      "dependsOrder": "sequence"
    }
	]
}