{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build: LGDXRobotCloud.API",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/LGDXRobotCloud.API/LGDXRobotCloud.API.csproj"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build: LGDXRobotCloud.UI",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/LGDXRobotCloud.UI/LGDXRobotCloud.UI.csproj"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "migration: reset",
			"command": "dotnet ef database drop -f && rm -rf Migrations && dotnet ef migrations add InitialCreate && dotnet ef database update && dotnet run --initializeData \"true\"",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/LGDXRobotCloud.Data"
			}
		},
		{
			"label": "build: all",
			"type": "dotnet",
			"task": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
		}
	]
}