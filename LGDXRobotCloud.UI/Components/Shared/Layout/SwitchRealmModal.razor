<div class="modal modal-blur fade" id="switchRealmModal" tabindex="-1">
  <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
    <div class="modal-content">

      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      <div class="modal-status bg-primary"></div>
      <div class="modal-body py-4">
        <div class="text-center">
          <i class="ti ti-map-pin-filled mb-2" style="font-size: 48px;"></i>
          <h3>Switch Realm</h3>
        </div>
        <InputSelect id="@SelectId" class="form-control" @bind-Value="RealmId">
          <option value="@RealmId">@RealmName</option>
        </InputSelect>
      </div>

      <div class="modal-footer">
        <div class="w-100">
          <div class="row">
            <div class="col">
              <a class="btn w-100" data-bs-dismiss="modal">
                Cancel
              </a>
            </div>
            <div class="col">
              <button type="submit" class="btn btn-blue w-100" data-bs-dismiss="modal" @onclick="HandleRealmSwitch">
                Confirm
              </button>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>