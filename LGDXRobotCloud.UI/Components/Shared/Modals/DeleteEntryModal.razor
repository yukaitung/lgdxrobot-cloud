<div class="modal fade modal-blur" id="deleteModal" tabindex="-1" data-bs-keyboard="false">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      <div class="modal-status bg-danger"></div>
      <div class="modal-body py-4 d-flex flex-column">
        <i class="ti ti-alert-triangle text-danger mb-2 text-center" style="font-size: 48px;"></i>
        <h3 class="text-center">Delete @EntryName</h3>
        <ApiErrorAlert Errors="Errors" />
        <div class="text-secondary">@ChildContent</div>
      </div>
      <div class="modal-footer">
        <div class="w-100">
          <div class="row">
            <div class="col">
              <a class="btn w-100" data-bs-dismiss="modal">
                Cancel
              </a>
            </div>
            <div class="col">
              <button type="button" class="btn btn-danger w-100" onclick="@(() => OnDelete.InvokeAsync())"
                data-bs-dismiss="modal" disabled="@(IsReady == false)">
                Delete
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

@code {
  [Parameter]
  public RenderFragment? ChildContent { get; set; }

  [Parameter]
  public required string EntryName { get; set; }

  [Parameter]
  public IDictionary<string,string>? Errors { get; set; }

  [Parameter]
  public bool IsReady { get; set; } = true;

  [Parameter]
  public required EventCallback OnDelete { get; set; }
}