@attribute [Route(AppRoutes.Navigation.Realms.Create)]
@attribute [Route(AppRoutes.Navigation.Realms.Detail)]
@attribute [Authorize(Policy = Permissions.Navigation.Realms.Read)]
@using LGDXRobotCloud.Data.Entities
@using LGDXRobotCloud.UI.Components.Pages.Administration.ActivityLogs.Components;
@using LGDXRobotCloud.Utilities.Constants

<PageHeader Title="@(Id != null ? "Edit Realm" : "Create Realm")">
  <div class="row align-items-center">
    <div class="col">
      <ReturnLink HREF="@AppRoutes.Navigation.Realms.Index" />
      <h2 class="page-title">
        @(Id != null ? "Edit Realm" : "Create Realm")
      </h2>
    </div>
    @if (Id != null)
    {
      <AuthorizeView Policy="@Permissions.Navigation.Realms.Write" Context="SLAM">
        <div class="col-auto ms-auto">
          <a href="@(AppRoutes.Navigation.Realms.Slam.Replace("{Id:int}", Id.ToString()))" type="button" class="btn btn-primary">
            Start SLAM
          </a>
        </div>
      </AuthorizeView>
    }
    
  </div>
</PageHeader>

<PageBody>
  <div class="row row-cards">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Realm Details</h3>
        </div>
        <EditForm EditContext="@_editContext" OnValidSubmit="HandleValidSubmit">
          <DataAnnotationsValidator />
          <div class="card-body">
            <ApiErrorAlert Errors="RealmDetailsViewModel.Errors" />
            <FormValidationErrorAlert Errors="@_editContext.GetValidationMessages()" />
            @if (Id != null)
            {
              <div class="mb-3 row">
                <label class="col-3 col-form-label">ID</label>
                <div class="col">
                  <div class="col form-control-plaintext">@RealmDetailsViewModel.Id</div>
                </div>
              </div>
            }
            <div class="mb-3 row">
              <label class="col-3 col-form-label required" for="@nameof(RealmDetailsViewModel.Name)">Name</label>
              <div class="col">
                <InputText id="@nameof(RealmDetailsViewModel.Name)" type="text" class="form-control"
                  @bind-Value="RealmDetailsViewModel.Name" />
                <ValidationMessage class="invalid-feedback" For="@(() => RealmDetailsViewModel.Name)" />
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label" for="@nameof(RealmDetailsViewModel.Description)">Description</label>
              <div class="col">
                <InputTextArea id="@nameof(RealmDetailsViewModel.Description)" class="form-control" rows="3"
                  @bind-Value="RealmDetailsViewModel.Description" />
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label" for="@nameof(RealmDetailsViewModel.HasWaypointsTrafficControl)">Waypoints Traffic Control</label>
              <div class="col">
                <label class="form-check mb-0">
                  <input id="@nameof(RealmDetailsViewModel.HasWaypointsTrafficControl)" class="form-check-input" type="checkbox" @bind="RealmDetailsViewModel.HasWaypointsTrafficControl">
                  <span class="form-check-label">Enable Waypoints Traffic Control</span>
                  <span class="form-check-description">Traffic rules must be defined in Map Editor after enabling Waypoint Traffic Control.</span>
                </label>
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label" for="@nameof(RealmDetailsViewModel.SelectedImage)">Image</label>
              <div class="col">
                @if (RealmDetailsViewModel.Image != null)
                {
                  <img class="mx-auto d-block mb-2" src="data:image/png;base64, @RealmDetailsViewModel.Image" />
                }
                <InputFile id="@nameof(RealmDetailsViewModel.SelectedImage)" class="form-control" OnChange="LoadImage"
                  accept=".png" />
                <ValidationMessage class="invalid-feedback" For="@(() => RealmDetailsViewModel.SelectedImage)" />
                <span class="form-check-description">The maximum file size is @((int)(LgdxApiConstants.ImageMaxSize / 1048576)) MB, and only .png images are
                  accepted.</span>
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label" for="@nameof(RealmDetailsViewModel.Resolution)">Resolution
                (m)</label>
              <div class="col">
                <InputNumber id="@nameof(RealmDetailsViewModel.Resolution)" type="number" step="any" class="form-control"
                  @bind-Value="RealmDetailsViewModel.Resolution" />
                <ValidationMessage class="invalid-feedback" For="@(() => RealmDetailsViewModel.Resolution)" />
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label" for="@nameof(RealmDetailsViewModel.OriginX)">Origin X (m)</label>
              <div class="col">
                <InputNumber id="@nameof(RealmDetailsViewModel.OriginX)" type="number" step="any" class="form-control"
                  @bind-Value="RealmDetailsViewModel.OriginX" />
                <ValidationMessage class="invalid-feedback" For="@(() => RealmDetailsViewModel.OriginX)" />
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label" for="@nameof(RealmDetailsViewModel.OriginY)">Origin Y (m)</label>
              <div class="col">
                <InputNumber id="@nameof(RealmDetailsViewModel.OriginY)" type="number" step="any" class="form-control"
                  @bind-Value="RealmDetailsViewModel.OriginY" />
                <ValidationMessage class="invalid-feedback" For="@(() => RealmDetailsViewModel.OriginY)" />
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label" for="@nameof(RealmDetailsViewModel.OriginRotation)">Origin
                Rotation (rad)</label>
              <div class="col">
                <InputNumber id="@nameof(RealmDetailsViewModel.OriginRotation)" type="number" step="any" class="form-control"
                  @bind-Value="RealmDetailsViewModel.OriginRotation" />
                <ValidationMessage class="invalid-feedback" For="@(() => RealmDetailsViewModel.OriginRotation)" />
              </div>
            </div>
          </div>
          <div class="card-footer d-flex align-items-center">
            <AuthorizeView Policy="@Permissions.Navigation.Realms.Delete" Context="DeleteModal">
              @if (Id != null && Id != CurrentRealmId)
              {
                <a class="btn btn-ghost-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" @onclick="HandleTestDelete">
                  Delete
                </a>
              }
              else if (Id != null)
              {
                <p class="m-0 text-secondary">
                  Switch to another realm to delete it.
                </p>
              }
            </AuthorizeView>
            <AuthorizeView Policy="@Permissions.Navigation.Realms.Write" Context="Write">
              <button type="submit" class="btn btn-primary ms-auto">@(Id != null ? "Update" : "Create")</button>
            </AuthorizeView>
          </div>
        </EditForm>
      </div>
    </div>
    @if (Id != null)
    {
      <AuthorizeView Policy=@Permissions.Administration.ActivityLogs.Read Context="ActivityLogs">
        <div class="col-12">
          <ActivityLogsTable DefaultEntityName="@nameof(Realm)" DefaultEntityId="@(Id.ToString())"
            ReturnUrl="@(AppRoutes.Navigation.Realms.Index + $"/{Id}")"/>
        </div>
      </AuthorizeView>
    }
  </div>
</PageBody>

<AuthorizeView Policy="@Permissions.Navigation.Realms.Delete" Context="DeleteModal">
  @if (Id != null)
  {
    <DeleteEntryModal EntryName="Realm" Errors="DeleteEntryModalViewModel.Errors"
      IsReady="DeleteEntryModalViewModel.IsReady" OnDelete="HandleDelete">
      Do you want to delete this Realm? This action cannot be undone. You must first remove the following entities that reference this Realm:
      <ul>
        <li>Robots</li>
        <li>Waypoints</li>
        <li>Tasks (Running/Waiting/Template)</li>
      </ul>
    </DeleteEntryModal>
  }
  </AuthorizeView>