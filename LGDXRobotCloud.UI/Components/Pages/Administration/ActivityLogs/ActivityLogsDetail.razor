@attribute [Route(AppRoutes.Administration.ActivityLogs.Detail)]
@attribute [Authorize (Policy = Permissions.Administration.ActivityLogs.Read)]

<PageHeader Title="Activity Log">
  <div class="row align-items-center">
    <div class="col">
      <ReturnLink HREF="@AppRoutes.Administration.ActivityLogs.Index" />
      <h2 class="page-title">
        Activity Log
      </h2>
    </div>
  </div>
</PageHeader>

@if (ActivityLog != null)
{
  <PageBody>
    <div class="row row-cards">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Activity Log</h3>
          </div>
          <div class="card-body">
            <div class="mb-3 row">
              <label class="col-3 col-form-label">ID</label>
              <div class="col">
                <div class="col form-control-plaintext">@ActivityLog.Id</div>
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label">Entity Name</label>
              <div class="col">
                <div class="col form-control-plaintext">@ActivityLog.EntityName</div>
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label">Entity ID</label>
              <div class="col">
                <div class="col form-control-plaintext">@ActivityLog.EntityId</div>
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label">User ID</label>
              <div class="col">
                <div class="col form-control-plaintext">@(ActivityLog.User != null ? ActivityLog.User.Id : "-")</div>
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label">User Name</label>
              <div class="col">
                <div class="col form-control-plaintext">@(DisplayUser(ActivityLog.User))</div>
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label">ApiKey ID</label>
              <div class="col">
                <div class="col form-control-plaintext">@(ActivityLog.ApiKey != null ? ActivityLog.ApiKey.Id : "-")</div>
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label">ApiKey Name</label>
              <div class="col">
                <div class="col form-control-plaintext">@(DisplayApiKey(ActivityLog.ApiKey))</div>
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label">Note</label>
              <div class="col">
                <div class="col form-control-plaintext">@ActivityLog.Note</div>
              </div>
            </div>
            <div class="mb-3 row">
              <label class="col-3 col-form-label">Created At</label>
              <div class="col">
                <div class="col form-control-plaintext">@UiHelper.TimeToString(ActivityLog.CreatedAt)</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </PageBody>
}
