@attribute [Route(AppRoutes.Identity.ForgotPassword)]
@layout AuthLayout

<div style="display: none;">
  <PageTitle>Forgot Password | LGDXRobot Cloud</PageTitle>
</div>

<a href="@AppRoutes.Identity.Login">â—€ Return</a>
<h2 class="h2 text-center mb-4">Forgot Password</h2>
<EditForm EditContext="_editContext" method="post" OnValidSubmit="HandleForgotPassword" FormName="ForgetPassword">
  @if (ForgotPasswordViewModel.IsSuccess)
  {
    <p>A password reset email has been sent to your email account.</p>
  }
  else
  {
    <DataAnnotationsValidator />
    <ApiErrorAlert Errors="ForgotPasswordViewModel.Errors" />
    <FormValidationErrorAlert Errors="@_editContext.GetValidationMessages()" />
    <div class="mb-3">
      <label class="form-label" for="@nameof(ForgotPasswordViewModel.Email)">Email</label>
      <InputText id="@nameof(ForgotPasswordViewModel.Email)" type="text" class="form-control" autocomplete="off" @bind-Value="ForgotPasswordViewModel.Email" />
      <ValidationMessage class="invalid-feedback" For="@(() => ForgotPasswordViewModel.Email)" />
    </div>
    <div class="form-footer">
      <button type="submit" class="btn btn-primary w-100">Submit</button>
    </div>
  }
</EditForm>
