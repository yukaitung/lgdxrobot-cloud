<LayoutView Layout="@typeof(MainLayout)">
  <h1>Action Needed: Your Robot Encountered an Issue</h1>
  <p>
    We noticed that your robot encountered a problem during its operation. It appears to be stuck and requires your attention.
  </p>
  <p>
    <table>
      <tr><td>Robot ID</td><td>@RobotId</td></tr>
      <tr><td>Robot Name</td><td>@RobotName</td></tr>
      <tr><td>Realm ID</td><td>@RealmId</td></tr>
      <tr><td>Realm Name</td><td>@RealmName</td></tr>
      <tr><td>Time of Incident</td><td>@Time</td></tr>
      <tr><td>Coordinates X</td><td>@(X)m</td></tr>
      <tr><td>Coordinates Y</td><td>@(Y)m</td></tr>
    </table>
  </p>
  <p>
    Please review the situation on the and take appropriate action to resolve the issue.
  </p>
</LayoutView>

@code {
  [Parameter]
  public string RobotId { get; set; } = string.Empty;

  [Parameter]
  public string RobotName { get; set; } = string.Empty;

  [Parameter]
  public string RealmId { get; set; } = string.Empty;

  [Parameter]
  public string RealmName { get; set; } = string.Empty;

  [Parameter]
  public string Time { get; set; } = string.Empty;

  [Parameter]
  public string X { get; set; } = string.Empty;

  [Parameter]
  public string Y { get; set; } = string.Empty;
}